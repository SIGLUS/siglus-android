<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/tv_movement_date"
    style="@style/AllStockHistory.ItemTable.Grid"
    android:layout_width="@dimen/px_0"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:gravity="center" />

  <TextView
    android:id="@+id/tv_movement_reason"
    style="@style/AllStockHistory.ItemTable.Grid"
    android:layout_width="@dimen/px_0"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:gravity="center" />

  <TextView
    android:id="@+id/tv_document_number"
    style="@style/AllStockHistory.ItemTable.Grid"
    android:layout_width="@dimen/px_0"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:gravity="center" />

  <TextView
    android:id="@+id/tv_entry_amount"
    style="@style/AllStockHistory.ItemTable.Grid"
    android:layout_width="@dimen/px_0"
    android:layout_height="match_parent"
    android:layout_weight="1" />

  <TextView
    android:id="@+id/tv_negative_adjustment_amount"
    style="@style/AllStockHistory.ItemTable.Grid"
    android:layout_width="@dimen/px_0"
    android:layout_height="match_parent"
    android:layout_weight="2" />

  <TextView
    android:id="@+id/tv_positive_adjustment_amount"
    style="@style/AllStockHistory.ItemTable.Grid"
    android:layout_width="@dimen/px_0"
    android:layout_height="match_parent"
    android:layout_weight="2" />

  <TextView
    android:id="@+id/tv_issue_amount"
    style="@style/AllStockHistory.ItemTable.Grid"
    android:layout_width="@dimen/px_0"
    android:layout_height="match_parent"
    android:layout_weight="1" />

  <TextView
    android:id="@+id/tv_stock_existence"
    style="@style/AllStockHistory.ItemTable.Grid"
    android:layout_width="@dimen/px_0"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:textStyle="bold" />
</LinearLayout>