<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btn_stock_card"
            style="@style/home_page_button"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
            android:text="@string/label_stock_cards"
            android:onClick="onClickStockCard"
            android:layout_marginBottom="@dimen/homepage_group_margin"/>

        <Button
            android:id="@+id/btn_inventory"
            style="@style/home_page_button"
            android:drawableStart="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
            android:text="@string/label_inventory"
            android:onClick="onClickInventory"
            android:layout_marginBottom="@dimen/homepage_group_margin"/>

        <Button
            android:id="@+id/btn_mmia"
            style="@style/home_page_button"
            android:drawableStart="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
            android:onClick="onClickMMIA"
            android:text="@string/label_mmia"/>

        <Button android:id="@+id/btn_mmia_list"
            android:drawableStart="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
            style="@style/home_page_button"
            android:text="@string/btn_mmia_list"
            android:onClick="onClickMMIAHistory"
            android:layout_marginBottom="@dimen/homepage_group_margin"/>

        <Button
            android:id="@+id/btn_requisition"
            style="@style/home_page_button"
            android:drawableStart="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
            android:onClick="onClickRequisition"
            android:text="@string/title_requisition" />

        <Button android:id="@+id/btn_via_list"
            android:drawableStart="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
            style="@style/home_page_button"
            android:text="@string/btn_requisition_list"
            android:onClick="onClickVIAHistory"
            android:layout_marginBottom="@dimen/homepage_group_margin"/>

        <Button
            android:id="@+id/btn_sync_data"
            style="@style/home_page_button"
            android:drawableStart="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
            android:onClick="onClickSyncData"
            android:text="@string/label_sync" />

        <TextView
            android:id="@+id/tx_last_synced"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/color_text_secondary"
            android:textSize="28sp" />
    </LinearLayout>
</ScrollView>