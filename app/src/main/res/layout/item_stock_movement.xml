<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:divider="@drawable/divider_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:showDividers="middle">

    <TextView
        android:id="@+id/tx_date"
        style="@style/sheet_header2"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tx_reason"
        style="@style/sheet_header2"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/et_document_no"
        style="@style/sheet_header2"
        android:layout_width="@dimen/stock_movement_item_common_width"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:background="@null"/>

    <EditText
        android:id="@+id/et_received"
        style="@style/sheet_header2"
        android:layout_width="@dimen/stock_movement_item_common_width"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:background="@null"/>

    <EditText
        android:id="@+id/et_negative_adjustment"
        style="@style/sheet_header2"
        android:layout_width="@dimen/stock_movement_item_common_width"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:background="@null"/>

    <EditText
        android:id="@+id/et_positive_adjustment"
        style="@style/sheet_header2"
        android:layout_width="@dimen/stock_movement_item_common_width"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:background="@null"/>

    <EditText
        android:id="@+id/et_issued"
        style="@style/sheet_header2"
        android:layout_width="@dimen/stock_movement_item_common_width"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:background="@null"/>

    <TextView
        android:id="@+id/tx_stock_on_hand"
        style="@style/sheet_header2"
        android:layout_width="@dimen/stock_movement_item_common_width"
        android:layout_height="wrap_content" />

</LinearLayout>