<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/tv_title"
    android:gravity="end"
    android:layout_centerInParent="true"
    android:paddingEnd="@dimen/px_6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toStartOf="@id/therapeutic_total"
    android:text="@string/mmia_1stline" />

  <EditText
    android:id="@+id/therapeutic_total"
    style="@style/MMIA.Regime.Total.Edit"
    android:layout_width="@dimen/mmtb_spread_item_common_width"
    android:layout_toStartOf="@id/therapeutic_pharmacy" />

  <EditText
    android:layout_width="@dimen/mmtb_spread_item_common_width"
    android:id="@+id/therapeutic_pharmacy"
    style="@style/MMIA.Regime.Total.Edit.End" />
</RelativeLayout>