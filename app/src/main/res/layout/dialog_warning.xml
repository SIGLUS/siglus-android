<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  style="@style/Dialog.Container"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/dialog_message"
    style="@style/Dialog.Title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/px_180"
    android:textColor="@color/color_red"
    android:gravity="left|center_vertical"
    tools:text="@string/msg_del_requisition" />

  <LinearLayout
    android:id="@+id/btn_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_normal"
    android:weightSum="2">

    <Button
      android:id="@+id/btn_cancel"
      style="@style/Dialog.Warning.CancelBtn"
      android:layout_width="@dimen/px_0"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      tools:text="@string/dialog_cancel" />

    <Button
      android:id="@+id/btn_del"
      style="@style/Dialog.Warning.DeleteBtn"
      android:layout_width="@dimen/px_0"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      tools:text="@string/btn_del" />
  </LinearLayout>
</LinearLayout>
