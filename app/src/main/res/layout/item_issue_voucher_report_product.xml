<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_92"
    android:background="@drawable/border_bg_gray_bottom"
    android:showDividers="middle"
    android:divider="@drawable/divider_vertical">
    <TextView style="@style/Pod.list.product"
      android:id="@+id/tv_product_dosage" />
    <TextView style="@style/Pod.list.product"
      android:id="@+id/tv_disiganation" />
    <TextView style="@style/Pod.list.product"
      android:layout_width="@dimen/px_230"/>
    <TextView style="@style/Pod.list.product"
      android:layout_width="@dimen/px_80"
      android:id="@+id/tv_expiring_date" />
    <TextView style="@style/Pod.list.product"
      android:layout_width="@dimen/px_80"
      android:id="@+id/tv_quantity_ordered" />
    <TextView style="@style/Pod.list.product"
      android:layout_width="@dimen/px_80"
      android:id="@+id/tv_partial_fulfilled"/>
    <TextView style="@style/Pod.list.product"
      android:layout_width="@dimen/px_80"
      android:id="@+id/tv_supplied_quantity"/>
    <TextView style="@style/Pod.list.product"
      android:layout_width="@dimen/px_80"
      android:id="@+id/tv_price"/>
    <TextView style="@style/Pod.list.product"
      android:layout_width="@dimen/px_80"
      android:id="@+id/tv_value"/>
    <TextView style="@style/Pod.list.product"
      android:layout_width="@dimen/px_80"
      android:id="@+id/tv_quantity_received"/>
    <TextView style="@style/Pod.list.product"
      android:layout_width="@dimen/px_80"
      android:id="@+id/tv_difference"/>
    <TextView style="@style/Pod.list.product"
      android:layout_width="@dimen/px_200" />
    <TextView style="@style/Pod.list.product"
      android:layout_width="@dimen/px_608"/>
  </LinearLayout>

  <ListView
    android:id="@+id/lv_issue_voucher_lot_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bg_gray_bottom"
    android:nestedScrollingEnabled="false"
    android:overScrollMode="never"
    android:scrollbars="none" />
</LinearLayout>