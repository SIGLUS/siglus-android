<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/action_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_button_bar_height"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/default_action_bar_padding_left_and_right"
        android:paddingRight="@dimen/default_action_bar_padding_left_and_right"
        android:paddingBottom="@dimen/default_action_bar_padding_top_and_bottom"
        android:paddingTop="@dimen/default_action_bar_padding_top_and_bottom"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/default_button_height"
            android:layout_marginRight="@dimen/default_action_button_margin"
            android:background="@drawable/white_button"
            android:clickable="true"
            android:gravity="center"
            android:elevation="1dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_button_height"
                android:layout_gravity="center"
                android:textSize="@dimen/default_button_font"
                android:background="@null"
                android:clickable="false"
                android:drawableStart="@drawable/ic_save"
                android:text="@string/btn_save"
                android:textColor="@color/color_accent"
                android:padding="2dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/default_button_height"
            android:textSize="@dimen/default_button_font"
            android:layout_marginLeft="@dimen/default_action_button_margin"
            android:background="@drawable/blue_button"
            android:text="@string/btn_complete"
            android:textColor="@color/white"
            android:padding="2dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>

