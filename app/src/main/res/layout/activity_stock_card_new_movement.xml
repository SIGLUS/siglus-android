<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/new_movement_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@drawable/border_bg"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ly_movement_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_weight="4"
                    android:padding="@dimen/padding_normal">

                    <EditText
                        android:id="@+id/et_movement_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint_movement_date"
                        android:inputType="date" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ly_document_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_weight="3"
                    android:padding="@dimen/padding_normal">

                    <EditText
                        android:id="@+id/et_document_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_document_number"
                        android:maxLength="9" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ly_movement_reason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_weight="4"
                    android:padding="@dimen/padding_normal">

                    <EditText
                        android:id="@+id/et_movement_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="false"
                        android:hint="@string/hint_movement_reason"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ly_requested_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_weight="3"
                    android:padding="@dimen/padding_normal">

                    <EditText
                        android:id="@+id/et_requested_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_requested_quantity"
                        android:inputType="number"
                        android:maxLength="9" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ly_movement_quantity"
                android:layout_width="@dimen/new_movement_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:padding="@dimen/padding_normal">

                <EditText
                    android:id="@+id/et_movement_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_movement_quantity"
                    android:inputType="number"
                    android:maxLength="9" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ly_movement_signature"
                android:layout_width="@dimen/new_movement_button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:padding="@dimen/padding_normal">

                <EditText
                    android:id="@+id/et_movement_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_movement_signature" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alert_add_positive_lot_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_lot_amount_alert"
                android:padding="@dimen/padding_small"
                android:text="@string/alert_add_lot_amount"
                android:textColor="@color/color_requisition_banner_text"
                android:textSize="@dimen/font_size_regular"
                android:visibility="gone" />

            <TextView
                android:id="@+id/alert_soonest_expire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_lot_amount_alert"
                android:padding="@dimen/padding_small"
                android:text="@string/alert_soonest_expire"
                android:textColor="@color/color_requisition_banner_text"
                android:textSize="@dimen/font_size_regular"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_existing_lot_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_left_right_gray_bg_white"
                android:scrollbars="none" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lot_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_left_right_gray_bg_white"
                android:scrollbars="none" />

            <LinearLayout
                android:id="@+id/action_add_new_lot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/border_bg"
                android:orientation="horizontal"
                android:padding="@dimen/padding_normal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btn_add_new_lot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_add_new_lot"
                    android:textColor="@color/color_accent"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_panel"
            style="@style/FormAction.Container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_button_bar_height"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                style="@style/FormAction.CancelBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_button_height"
                android:layout_weight="1"
                android:text="@string/btn_cancel" />

            <Button
                android:id="@+id/btn_complete"
                style="@style/FormAction.CompleteBtn.StockMovement"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_button_height"
                android:layout_weight="1"
                android:text="@string/btn_complete" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>