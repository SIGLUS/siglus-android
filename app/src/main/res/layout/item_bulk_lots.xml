<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/tv_lot_information"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_tiny_tiny"
    android:layout_weight="4"
    android:textColor="@color/color_black"
    android:textSize="12sp"
    tools:text="@string/batch_dummy" />

  <EditText
    android:id="@+id/et_amount"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_tiny_tiny"
    android:layout_weight="3"
    android:inputType="number"
    android:maxLength="@integer/edit_amount_initial_inventory_length"
    android:hint="@+id/et_amount" />

  <ImageButton
    android:id="@+id/btn_delete_lot"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/margin_tiny_tiny"
    android:layout_weight="1"
    android:background="@color/white_transparent_color"
    android:src="@drawable/ic_clear"
    android:tint="@color/color_red" />
</LinearLayout>