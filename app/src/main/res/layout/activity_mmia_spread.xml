<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mmia_spread_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <org.openlmis.core.view.widget.MMIARnrForm
                android:id="@+id/rnr_form_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mmia_spread_list_bg"
                android:divider="@drawable/divider_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/divider"
                android:showDividers="middle" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="8dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <org.openlmis.core.view.widget.MMIARegimeList
                        android:id="@+id/regime_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mmia_spread_list_bg"
                        android:divider="@drawable/divider_horizontal"
                        android:padding="@dimen/divider"
                        android:showDividers="middle" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/regime_list"
                        android:layout_toStartOf="@+id/tv_regime_total"
                        android:background="@drawable/mmia_spread_total_bg"
                        android:gravity="end|center_vertical"
                        android:labelFor="@+id/tv_regime_total"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:text="@string/Total" />

                    <TextView
                        android:id="@+id/tv_regime_total"
                        android:layout_width="@dimen/mmia_spread_item_common_width"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/regime_list"
                        android:background="@drawable/mmia_spread_et_total_bg"
                        android:freezesText="true"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:padding="8dp"
                        android:text="@string/mmia_speed_info_header"
                        android:textColor="@color/white" />

                    <org.openlmis.core.view.widget.MMIAInfoList
                        android:id="@+id/mmia_info_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mmia_spread_list_bg"
                        android:divider="@drawable/divider_horizontal"
                        android:padding="@dimen/divider"
                        android:showDividers="middle" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/ly_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/white">

                        <EditText
                            android:id="@+id/et_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_mmia_comment"
                            android:minHeight="50dp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/blue_button"
        android:text="@string/btn_complete"
        android:textColor="@color/white" />

</merge>