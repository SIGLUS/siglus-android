<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:orientation="horizontal">

  <ProgressBar
    android:id="@+id/pb_sync_data"
    android:layout_width="@dimen/px_29"
    android:layout_height="@dimen/px_29"
    android:visibility="gone"
    android:layout_marginRight="@dimen/margin_tiny" />

  <ImageView
    android:id="@+id/iv_sync_time_icon"
    android:layout_width="@dimen/px_25"
    android:layout_height="@dimen/px_25"
    android:layout_marginRight="@dimen/margin_small" />

  <TextView
    android:id="@+id/tx_sync_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/px_22" />
</LinearLayout>