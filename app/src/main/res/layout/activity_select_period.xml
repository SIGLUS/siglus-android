<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium">

    <TextView
        android:id="@+id/tv_select_period_instruction"
        style="@style/Text.Black.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <GridView
        android:id="@+id/vg_inventory_date_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:horizontalSpacing="@dimen/margin_small"
        android:numColumns="3"
        android:verticalSpacing="@dimen/margin_small" />

    <TextView
        android:id="@+id/tv_select_period_warning"
        style="@style/Text.Red.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_select_period_warning"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_select_period_next"
        style="@style/Button.Blue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/color_white"
        android:text="@string/label_next" />
</LinearLayout>