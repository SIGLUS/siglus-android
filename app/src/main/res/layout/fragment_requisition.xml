<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/vg_container"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <org.openlmis.core.view.widget.BorderedEditText
        android:id="@+id/tx_consultation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_bg"
        app:ems="4"
        app:labelWidth="100dp"
        app:text="@string/label_consultation"
        android:layout_alignParentTop="true"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_bg_light_gray"
        android:layout_below="@id/tx_consultation"
        android:layout_above="@+id/action_panel">
        <HorizontalScrollView android:id="@+id/form_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include android:id="@+id/requisition_header_right"
                    layout="@layout/item_requisition_header"/>
                <ListView
                    android:id="@+id/requisition_form"
                    android:layout_width="1400dp"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical" />
            </LinearLayout>

        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include android:id="@+id/requisition_header_left"
                layout="@layout/layout_requisition_header_left"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

            <ListView
                android:id="@+id/product_name_list_view"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scrollbars="none"/>
        </LinearLayout>
    </FrameLayout>

    <include android:id="@+id/action_panel"
        layout="@layout/layout_form_action"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

