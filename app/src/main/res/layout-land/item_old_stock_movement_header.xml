<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ItemMovement.Container">

    <TextView
        android:id="@+id/tx_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        style="@style/ItemMovement.CellText"
        android:text="@string/label_movement_date"/>

    <TextView
        android:id="@+id/tx_reason"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/ItemMovement.CellText"
        android:text="@string/label_reason"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ItemMovement.Container">

        <TextView
            android:id="@+id/et_document_no"
            android:minWidth="@dimen/stock_movement_item_common_width"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/ItemMovement.CellText"
            android:text="@string/label_document_no"/>

        <TextView
            android:id="@+id/et_received"
            android:minWidth="@dimen/stock_movement_item_common_width"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/ItemMovement.CellText"
            android:text="@string/label_received_mmia"/>

        <TextView
            android:id="@+id/et_negative_adjustment"
            android:minWidth="@dimen/stock_movement_item_common_width"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/ItemMovement.CellText"
            android:text="@string/label_negative_adjustment"/>

        <TextView
            android:id="@+id/et_positive_adjustment"
            android:minWidth="@dimen/stock_movement_item_common_width"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/ItemMovement.CellText"
            android:text="@string/label_positive_adjustment"/>

        <TextView
            android:id="@+id/et_issued"
            android:minWidth="@dimen/stock_movement_item_common_width"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/ItemMovement.CellText"
            android:text="@string/label_issued_mmia"/>

        <TextView
            android:id="@+id/tx_stock_on_hand"
            android:minWidth="@dimen/stock_movement_item_common_width"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/ItemMovement.CellText"
            android:text="@string/label_stock_existence"/>

        <TextView
            android:id="@+id/tx_requested"
            android:minWidth="@dimen/stock_movement_item_common_width"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/ItemMovement.CellText"
            android:text="@string/label_requested"/>

        <TextView
            android:id="@+id/tx_signature"
            android:minWidth="@dimen/stock_movement_item_common_width"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/ItemMovement.CellText"
            android:text="@string/label_signature"/>

    </LinearLayout>

</LinearLayout>