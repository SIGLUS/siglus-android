<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/ll_stock_movement_root"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center_vertical"
  android:showDividers="middle"
  android:divider="@drawable/divider_vertical"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/tv_date"
    android:gravity="center"
    android:layout_width="@dimen/px_100"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:textSize="@dimen/px_14"
    android:paddingHorizontal="@dimen/px_7"
    android:paddingVertical="@dimen/px_13"
    tools:text="@string/label_movement_date" />

  <TextView
    android:id="@+id/tv_reason"
    android:gravity="center"
    android:layout_width="@dimen/px_200"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:textSize="@dimen/px_14"
    android:paddingHorizontal="@dimen/px_7"
    android:paddingVertical="@dimen/px_13"
    tools:text="@string/label_reason" />

  <TextView
    android:id="@+id/tv_lot_code"
    android:gravity="center"
    android:layout_width="@dimen/px_0"
    android:layout_weight="1.5"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:textSize="@dimen/px_14"
    android:paddingHorizontal="@dimen/px_7"
    android:paddingVertical="@dimen/px_13"
    tools:text="@string/label_stockcard_lot_code" />

  <TextView
    android:id="@+id/tv_document_number"
    android:gravity="center"
    android:layout_width="@dimen/px_0"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:textSize="@dimen/px_14"
    android:paddingHorizontal="@dimen/px_7"
    android:paddingVertical="@dimen/px_13"
    tools:text="@string/label_document_no" />

  <TextView
    android:id="@+id/tv_received"
    android:gravity="center"
    android:layout_width="@dimen/px_0"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:textSize="@dimen/px_14"
    android:paddingHorizontal="@dimen/px_7"
    android:paddingVertical="@dimen/px_13"
    tools:text="@string/label_received_mmia" />

  <TextView
    android:id="@+id/tv_negative_adjustment"
    android:gravity="center"
    android:layout_width="@dimen/px_0"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:textSize="@dimen/px_14"
    android:paddingHorizontal="@dimen/px_7"
    android:paddingVertical="@dimen/px_13"
    tools:text="@string/label_negative_adjustment" />

  <TextView
    android:id="@+id/tv_positive_adjustment"
    android:gravity="center"
    android:layout_width="@dimen/px_0"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:textSize="@dimen/px_14"
    android:paddingHorizontal="@dimen/px_7"
    android:paddingVertical="@dimen/px_13"
    tools:text="@string/label_positive_adjustment" />

  <TextView
    android:id="@+id/tv_issued"
    android:gravity="center"
    android:layout_width="@dimen/px_0"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:textSize="@dimen/px_14"
    android:paddingHorizontal="@dimen/px_7"
    android:paddingVertical="@dimen/px_13"
    tools:text="@string/label_issued_mmia" />

  <TextView
    android:id="@+id/tv_stock_on_hand"
    android:gravity="center"
    android:layout_width="@dimen/px_0"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:textSize="@dimen/px_14"
    android:paddingHorizontal="@dimen/px_7"
    android:paddingVertical="@dimen/px_13"
    tools:text="@string/label_stock_existence" />

  <TextView
    android:id="@+id/tv_requested"
    android:gravity="center"
    android:layout_width="@dimen/px_0"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:textSize="@dimen/px_14"
    android:paddingHorizontal="@dimen/px_7"
    android:paddingVertical="@dimen/px_13"
    tools:text="@string/label_requested" />

  <TextView
    android:id="@+id/tv_signature"
    android:gravity="center"
    android:layout_width="@dimen/px_0"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:textColor="@color/color_black"
    android:textSize="@dimen/px_14"
    android:paddingHorizontal="@dimen/px_7"
    android:paddingVertical="@dimen/px_13"
    tools:text="@string/label_signature" />

</LinearLayout>