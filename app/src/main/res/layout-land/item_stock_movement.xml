<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemMovement.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tx_date"
        style="@style/ItemMovement.CellText"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tx_reason"
        style="@style/ItemMovement.CellText"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/et_document_number"
        style="@style/ItemMovement.CellText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minWidth="@dimen/stock_movement_item_common_width"
        android:maxLength="9"/>

    <EditText
        android:id="@+id/et_received"
        style="@style/ItemMovement.CellText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="text"
        android:minWidth="@dimen/stock_movement_item_common_width" />

    <EditText
        android:id="@+id/et_negative_adjustment"
        style="@style/ItemMovement.CellText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="text"
        android:minWidth="@dimen/stock_movement_item_common_width" />

    <EditText
        android:id="@+id/et_positive_adjustment"
        style="@style/ItemMovement.CellText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="text"
        android:minWidth="@dimen/stock_movement_item_common_width" />

    <EditText
        android:id="@+id/et_issued"
        style="@style/ItemMovement.CellText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="text"
        android:minWidth="@dimen/stock_movement_item_common_width" />

    <TextView
        android:id="@+id/tx_stock_on_hand"
        style="@style/ItemMovement.CellText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minWidth="@dimen/stock_movement_item_common_width" />

    <EditText
        android:id="@+id/et_requested"
        style="@style/ItemMovement.CellText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="text"
        android:minWidth="@dimen/stock_movement_item_common_width" />

    <TextView
        android:id="@+id/tx_signature"
        style="@style/ItemMovement.CellText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minWidth="@dimen/stock_movement_item_common_width" />

</LinearLayout>