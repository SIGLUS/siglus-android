<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/Divider.Horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/border_bg"
  android:divider="@drawable/divider_horizontal"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_80"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/iv_icon"
      android:layout_width="@dimen/px_66"
      android:layout_height="@dimen/px_71"
      android:layout_marginLeft="@dimen/px_28"
      android:layout_centerVertical="true"
      android:src="@drawable/stock_card_icon" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:orientation="vertical">
      <TextView
        android:id="@+id/tv_order_name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ORDER-AS5J7B1RR"
        android:textColor="@color/color_black"
        android:textSize="@dimen/px_28" />
      <TextView
        android:id="@+id/tv_period_info"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="01/06/2020 - 30/06/2020"
        android:textColor="@color/color_black"
        android:textSize="@dimen/px_20" />
    </LinearLayout>
  </RelativeLayout>
  <LinearLayout style="@style/Pod.header.line">
    <TextView style="@style/Pod.header.text.title"
      android:text= "@string/label_ordering_facility"
      android:layout_weight="8"/>
    <TextView style="@style/Pod.header.text.value"
      android:id="@+id/tv_order_facility"
      android:layout_weight="17" />
    <TextView style="@style/Pod.header.text.title"
      android:text="@string/label_supplying_depot"
      android:layout_weight="8"/>
    <TextView style="@style/Pod.header.text.value"
      android:id="@+id/tv_supplying_depot"
      android:layout_weight="17" />
  </LinearLayout>
  <LinearLayout style="@style/Pod.header.line">
    <TextView style="@style/Pod.header.text.title"
      android:layout_weight="8"
      android:text="@string/label_program"/>
    <TextView style="@style/Pod.header.text.value"
      android:id="@+id/tv_program"
      android:layout_weight="17"/>
    <TextView style="@style/Pod.header.text.title"
      android:text="@string/label_shipping_date"
      android:layout_weight="8"/>
    <TextView style="@style/Pod.header.text.value"
      android:id="@+id/tv_shipping_date"
      android:layout_weight="17"/>
  </LinearLayout>
  <LinearLayout android:id="@+id/ll_pod_receive_info"
    style="@style/Pod.header.line">
    <TextView style="@style/Pod.header.text.title"
      android:layout_weight="8"
      android:text="@string/label_delivered_by"/>
    <TextView style="@style/Pod.header.text.value"
      android:id="@+id/tv_delivered_by"
      android:layout_weight="17"/>
    <TextView style="@style/Pod.header.text.title"
      android:text="@string/label_received_by"
      android:layout_weight="8"/>
    <TextView style="@style/Pod.header.text.value"
      android:id="@+id/tv_received_by"
      android:layout_weight="17"/>
  </LinearLayout>

</LinearLayout>