<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="mmia_spread_rnr_item">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mmia_spread_list_item">
        <item name="android:minHeight">35dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="home_page_button">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_gravity">center_horizontal</item>

        <item name="android:layout_marginBottom">@dimen/homepage_button_margin</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:drawablePadding">10dp</item>
    </style>


    <style name="DefaultBorderedEditText">
        <item name="text">Label</item>
        <item name="ems">4</item>
    </style>

    <style name="sheet_header_base">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="sheet_header1" parent="sheet_header_base">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="sheet_header2" parent="sheet_header_base">
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">60dp</item>
    </style>

</resources>
