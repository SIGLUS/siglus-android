<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- ActionBar styles -->
  <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/color_primary</item>
    <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

    <!-- Support library compatibility -->
    <item name="background">@color/color_primary</item>
    <item name="titleTextStyle">@style/MyActionBarTitleText</item>
  </style>

  <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@color/color_white</item>
  </style>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="android:actionBarStyle">@style/MyActionBar</item>
    <item name="android:windowBackground">@color/general_background_color</item>
    <!-- Support library compatibility -->
    <item name="actionBarStyle">@style/MyActionBar</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AMBER">
    <item name="android:actionBarStyle">@style/MyActionBar.AMBER</item>
    <item name="actionBarStyle">@style/MyActionBar.AMBER</item>
  </style>

  <style name="MyActionBar.AMBER">
    <item name="android:background">@color/color_amber</item>
    <item name="background">@color/color_amber</item>
  </style>

  <style name="AppTheme.PURPLE">
    <item name="android:actionBarStyle">@style/MyActionBar.PURPLE</item>
    <item name="actionBarStyle">@style/MyActionBar.PURPLE</item>
  </style>

  <style name="AppTheme.LIGHT_BLUE">
    <item name="android:actionBarStyle">@style/MyActionBar.LIGHT_BLUE</item>
    <item name="actionBarStyle">@style/MyActionBar.LIGHT_BLUE</item>
  </style>

  <style name="MyActionBar.PURPLE">
    <item name="android:background">@color/color_purple</item>
    <item name="background">@color/color_purple</item>
  </style>

  <style name="MyActionBar.LIGHT_BLUE">
    <item name="android:background">@color/color_light_blue</item>
    <item name="background">@color/color_light_blue</item>
  </style>

  <style name="AppTheme.PINK">
    <item name="android:actionBarStyle">@style/MyActionBar.PINK</item>
    <item name="actionBarStyle">@style/MyActionBar.PINK</item>
  </style>

  <style name="MyActionBar.PINK">
    <item name="android:background">@color/color_pink</item>
    <item name="background">@color/color_pink</item>
  </style>

  <style name="AppTheme.TEAL">
    <item name="android:actionBarStyle">@style/MyActionBar.TEAL</item>
    <item name="actionBarStyle">@style/MyActionBar.TEAL</item>
  </style>

  <style name="MyActionBar.TEAL">
    <item name="android:background">@color/color_teal</item>
    <item name="background">@color/color_teal</item>
  </style>

  <style name="AppTheme.BLUE">
    <item name="android:actionBarStyle">@style/MyActionBar.BLUE</item>
    <item name="actionBarStyle">@style/MyActionBar.BLUE</item>
  </style>

  <style name="MyActionBar.BLUE">
    <item name="android:background">@color/color_blue</item>
    <item name="background">@color/color_blue</item>
  </style>

  <style name="AppTheme.Gray">
    <item name="android:actionBarStyle">@style/MyActionBar.Gray</item>
    <item name="actionBarStyle">@style/MyActionBar.Gray</item>
  </style>

  <style name="AppTheme.BlueGray">
    <item name="android:actionBarStyle">@style/MyActionBar.BlueGray</item>
    <item name="actionBarStyle">@style/MyActionBar.BlueGray</item>
  </style>

  <style name="AppTheme.OrangeRed">
    <item name="android:actionBarStyle">@style/MyActionBar.PINK</item>
    <item name="actionBarStyle">@style/MyActionBar.PINK</item>
  </style>

  <style name="MyActionBar.BlueGray">
    <item name="android:background">@color/color_material_blue_gray</item>
    <item name="background">@color/color_material_blue_gray</item>
  </style>

  <style name="MyActionBar.Gray">
    <item name="android:background">@color/color_black</item>
    <item name="background">@color/color_gray</item>
  </style>

  <style name="MyActionBar.WhiteEditText">
    <item name="colorControlNormal">@color/color_white_alpha</item>
    <item name="colorControlActivated">@color/color_white</item>
    <item name="colorControlHighlight">@color/color_white</item>
  </style>

  <!-- Basic style of TextView -->
  <style name="Text" />

  <style name="Text.Black">
    <item name="android:textColor">@color/color_text_primary</item>
  </style>

  <style name="Text.Black.Small">
    <item name="android:textSize">@dimen/font_size_small</item>
  </style>

  <style name="Text.Black.Regular">
    <item name="android:textSize">@dimen/font_size_regular</item>
  </style>

  <style name="Text.Black.Normal">
    <item name="android:textSize">@dimen/font_size_normal</item>
  </style>

  <style name="Text.Black.Normal.Bold">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Text.Black.Large">
    <item name="android:textSize">@dimen/font_size_large</item>
  </style>

  <style name="Text.Black.Large.Bold">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Text.Black.Medium">
    <item name="android:textSize">@dimen/font_size_medium</item>
  </style>

  <style name="Text.Gray">
    <item name="android:textColor">@color/color_text_secondary</item>
  </style>

  <style name="Text.Gray.Regular">
    <item name="android:textSize">@dimen/font_size_regular</item>
  </style>

  <style name="Text.Gray.Normal">
    <item name="android:textSize">@dimen/font_size_normal</item>
  </style>

  <style name="Text.Gray.Medium">
    <item name="android:textSize">@dimen/font_size_medium</item>
  </style>

  <style name="Text.White">
    <item name="android:textColor">@color/color_white</item>
  </style>

  <style name="Text.White.Regular">
    <item name="android:textSize">@dimen/font_size_regular</item>
  </style>

  <style name="Text.White.Normal">
    <item name="android:textSize">@dimen/font_size_normal</item>
  </style>

  <style name="Text.Blue">
    <item name="android:textColor">@color/color_accent</item>
  </style>

  <style name="Text.Blue.Regular">
    <item name="android:textSize">@dimen/font_size_regular</item>
  </style>

  <style name="Text.Blue.Normal">
    <item name="android:textSize">@dimen/font_size_normal</item>
  </style>

  <style name="Text.Red">
    <item name="android:textColor">@color/color_red</item>
  </style>

  <style name="Text.Red.Regular">
    <item name="android:textSize">@dimen/font_size_regular</item>
  </style>

  <!-- Basic style of Button -->

  <style name="Button" />

  <style name="Button.Blue" parent="Text.White.Normal">
    <item name="android:background">@drawable/blue_button</item>
  </style>

  <style name="Button.Blue.Large">
    <item name="android:textSize">@dimen/font_size_large</item>
  </style>

  <style name="Button.Transparent" parent="Text.Blue.Normal">
    <item name="android:background">@android:color/transparent</item>
  </style>

  <!-- Basic style of Spacing Line -->

  <style name="HorizontalLine">
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@color/color_divider</item>
  </style>

  <style name="EditText" />

  <style name="EditText.Gray">
    <item name="colorControlNormal">@color/color_979797</item>
  </style>
</resources>