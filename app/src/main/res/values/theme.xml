<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->

        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/color_primary</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@color/color_primary</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <!-- Basic style of TextView -->
    <style name="Text" />

    <style name="Text.Black">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="Text.Black.Small">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="Text.Black.Regular">
        <item name="android:textSize">@dimen/font_size_regular</item>
    </style>

    <style name="Text.Black.Normal">
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="Text.Black.Normal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Black.Large">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="Text.Black.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Black.Medium">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="Text.Gray">
        <item name="android:textColor">@color/color_text_secondary</item>
    </style>

    <style name="Text.Gray.Regular">
        <item name="android:textSize">@dimen/font_size_regular</item>
    </style>

    <style name="Text.Gray.Normal">
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="Text.Gray.Medium">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="Text.Gray.Large">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>
    
    <style name="Text.LightGray">
        <item name="android:textColor">@color/color_divider</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="Text.White.Regular">
        <item name="android:textSize">@dimen/font_size_regular</item>
    </style>

    <style name="Text.White.Normal">
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="Text.Blue">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="Text.Blue.Small">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="Text.Blue.Regular">
        <item name="android:textSize">@dimen/font_size_regular</item>
    </style>

    <style name="Text.Blue.Normal">
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="Text.Blue.Medium">
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="Text.Red">
        <item name="android:textColor">@color/color_red</item>
    </style>

    <style name="Text.Red.Regular">
        <item name="android:textSize">@dimen/font_size_regular</item>
    </style>

    <!-- Basic style of Button -->

    <style name="Button" />

    <style name="Button.Blue" parent="Text.White.Normal">
        <item name="android:background">@drawable/blue_button</item>
    </style>
    <style name="Button.Blue.Large">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>
    <style name="Button.Transparent" parent="Text.Blue.Normal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Basic style of Spacing Line -->

    <style name="HorizontalLine">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_divider</item>
    </style>
    <style name="VerticalLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/color_divider</item>
    </style>
</resources>